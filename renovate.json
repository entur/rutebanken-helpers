{
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:monthly"
  ],
  "timezone": "Europe/Oslo",
  "baseBranches": [
    "master",
    "1.x"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "org.entur.ror:superpom"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}